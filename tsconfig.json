{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "build"
	},
	"include": ["src"],
	"exclude": ["build", "node_modules"]
}
