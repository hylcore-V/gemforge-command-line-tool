{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "NodeNext",
    "outDir": "build",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,		
		"allowJs": true,
		"skipLibCheck": false,
		"declaration": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["build", "node_modules"]
}
